<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="notification_preferences"
        app:title="Preferences of notifications"
       >

        <SeekBarPreference
            android:max="20"
            app:min="1"
            app:key="radiusFromBranch"
            app:defaultValue="5"
            app:title="Radius"
          />

        <SeekBarPreference
            android:max="10"
            app:min="1"
            app:key="timeBetweenNotifications"
            app:defaultValue="1"
            app:title="Time between notifications"
        />

    </PreferenceCategory>

</PreferenceScreen>